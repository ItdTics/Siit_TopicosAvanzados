*
	margin 0
	padding 0	
	box-sizing border-box
html,body
	height 100%
header
	background-color #262626
	color #fff
	font-size 25px
	width 100%
	height 45px
	display block
	a
		float right
		padding 10px
		margin 5px
		font-size 18px
		span
			padding-right 5px
.menu_bar
		font-size 40px
		color white
		display none
		
		.bt-menu
			cursor pointer
				
nav
	width 15%
	height 100%
	float left
	min-width 300px
	background-color #343434
	
	.profile 
		color white
		text-align center
		.img_profile
			margin 5% auto
			width 180px
			display block
			height 180px
			border 7px solid #5f5e5c
		.id
			font-size 17px
		.welcome
			font-size 20
	ul
		overflow hidden
		list-style none
		li 
			
			border-bottom 1px solid #2b2b2b
			a
				font-size 18px
				color white
				padding 10px
				display block
				text-decoration none
				border-left 7px solid #2b2b2b
				span
					margin-right 5px
			a:hover
				border-left 5px solid #f04f4f
				span
					margin-right 15px
			
.semestre
	width 24%
	display inline-block
	color white
	margin-left 40px
	h3
		font-size 7em
		color #f04f4f
		text-align center
.titulo_semestre
	background #f04f4f
	h2
		font-size 1.1em
		padding 2px 0 2px 15px
.reticula
	width 98%
	height 300px
	margin-top 35px
	background #295BDE
	color white
.contenido
	width 76%
	float left
	padding 10px
	div
		box-shadow 0 5px 5px #ccc
	.datos
		width 70%
		height 154px
		display inline-block
		vertical-align top
		.datos_sup
			background-color #0089f1
			
			color white
			padding 2px 0 2px 15px
			
/*
	-------------------------RESPONSIVE DESIGN---------------------------------
*/
@media screen and (max-width 1024px)
	nav
		width 40%
		position fixed
		left -100%
		margin 0px
		.profile
			.img_profile
				display block
				width 50%
				margin-left 25%
	header
		height 60px
		font-size 40px
	.menu_bar
		display inline-block
		a
			font-size 40px
	.contenido
		padding 5px
		div,section,article,aside
			margin 15px
		
		.datos_sup
			margin 0
@media screen and (max-width 580px)
	nav
		width 80%
		position fixed
		left -100%
		margin 0px
		.profile
			.img_profile
				display block
				width 50%
				margin-left 25%
	header
		height 60px
		font-size 40px
	.menu_bar
		display inline-block
		a
			font-size 40px
	
	.contenido
		width 100%
		padding 5px
		div,section,article,aside
			margin 15px
			display block
			width 95%
		.datos
			display block
			width 95%
		.datos_sup
			margin 0